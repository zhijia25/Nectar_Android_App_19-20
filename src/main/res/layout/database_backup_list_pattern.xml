<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/databaseBackupLI1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseBackupNameLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/databaseBackupLI1"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.3"
            android:text="@string/name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/databaseBackupNameLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.7"
            android:text="@string/medium_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseBackupLI2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseBackupLI1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseBackupDatastoreLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="@string/datastore_type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/databaseBackupDatastoreLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="@string/name_with_star"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseBackupLI3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseBackupLI2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseBackupVersionLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="@string/version"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseBackupVersionLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="@string/straight_line"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseBackupLI4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseBackupLI3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseBackupDatabaseLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="@string/database"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseBackupDatabaseLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="@string/straight_line"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseBackupLI5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseBackupLI4"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseBackupStatusLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="@string/status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseBackupStatusLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="@string/straight_line"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/databaseBackupLI5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
