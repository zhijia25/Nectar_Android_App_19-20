<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/FloatingLI1"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ipaddress"
            android:id="@+id/FloatingAddressLI1"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text ="@string/medium_text"
            android:id="@+id/FloatingAddressLI"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/FloatingLI1"
        android:id="@+id/FloatingLI2"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceSmall"
            android:text="@string/resource_pool"
            android:id="@+id/FloatingPoolLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/straight_line"
            android:id="@+id/FloatingPoolLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/FloatingLI2"
        android:id="@+id/FloatingLI3"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text = "@string/status"
            android:id="@+id/FloatingStateLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            />

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/straight_line"
            android:id="@+id/FloatingStateLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/FloatingLI3"
        android:id="@+id/FloatingLI4"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text = "@string/description"
            android:id="@+id/FloatingDescriptionLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            />

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/straight_line"
            android:id="@+id/FloatingDescriptionLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"  />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/FloatingLI4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
