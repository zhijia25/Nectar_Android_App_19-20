<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sgML1"
        android:layout_centerHorizontal="true"

        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/direction"
            android:id="@+id/sgDirctionMSG1"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/medium_text"
            android:id="@+id/sgDirctionMSG"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sgML1"
        android:id="@+id/sgML2"
        android:layout_centerHorizontal="true"

        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ether_type"
            android:id="@+id/sgETMSG1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/medium_text"
            android:id="@+id/sgETMSG"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sgML2"
        android:id="@+id/sgML3"
        android:layout_centerHorizontal="true"

        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ip_protocol"
            android:id="@+id/sgIPPMSG1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/medium_text"
            android:id="@+id/sgIPPMSG"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sgML3"
        android:id="@+id/sgML4"
        android:layout_centerHorizontal="true"

        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/port_range"
            android:id="@+id/sgPRMSG1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/medium_text"
            android:id="@+id/sgPRMSG"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sgML4"
        android:id="@+id/sgML5"
        android:layout_centerHorizontal="true"

        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/remote_ip_prefix"
            android:id="@+id/sgRIPPMSG1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/straight_line"
            android:id="@+id/sgRIPPMSG"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sgML5"
        android:id="@+id/sgML6"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/remote_security_group"
            android:id="@+id/sgrsgMSG1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/sgrsgMSG"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.5" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/sgML6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>